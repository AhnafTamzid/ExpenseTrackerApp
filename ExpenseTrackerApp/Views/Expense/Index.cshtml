@model IEnumerable<ExpenseTrackerApp.Models.ExpenseModel>

@{
    ViewData["Title"] = "ExpenseTrackerApp";
}

<body>
    <nav class="navbar navbar-expand-lg bg-primary navbar-dark">
        <div class="container">
            <a href="#" class="navbar-brand">Expense List</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/Expense/Create">Add New Expense</a>
        </li></ul></div></div>
        </nav>
</body>
<br/>
    
<div class="table-responsive-xl">
<table class="table table-light table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(expense => expense.Category)
            </th>
            <th>
                @Html.DisplayNameFor(expense => expense.Date)
            </th>
            <th>
                @Html.DisplayNameFor(expense => expense.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a type="button" class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Expense" asp-route-id="@item.Eid">Edit</a>
                <a type="button" class="btn btn-secondary btn-sm" asp-action="Delete" asp-controller="Expense" asp-route-id="@item.Eid" class="btn-danger" onclick="return confirm('Are you sure you want to delete this entry?')">
                    Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>